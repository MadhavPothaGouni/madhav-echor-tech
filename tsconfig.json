{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "target": "ES2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "types": ["node"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "resolveJsonModule": true
  },
  "include": ["src"]
}
